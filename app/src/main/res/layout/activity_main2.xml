<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:id="@+id/taom_qoshish"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@id/taom_nomi"
        android:background="#22E286">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#880E4F"
            android:text="Taom qoshish"
            android:textSize="@dimen/_18ssp"/>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/taom_nomi"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/taom_qoshish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@id/maxsulotlar"
        android:background="#BEEFD6">
        <EditText
            android:id="@+id/e_t_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:padding="@dimen/_15sdp"
            android:textColor="#28047A"
            android:hint="Taom_nomi"
            android:textSize="@dimen/_20sdp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/maxsulotlar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/taom_nomi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@id/tay_tartibi"
        android:background="#BEEFD6">
        <EditText
            android:id="@+id/e_t_maxsulot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:padding="@dimen/_15sdp"
            android:textColor="#28047A"
            android:hint="Kerakli maxsulotlar"
            android:textSize="@dimen/_18sdp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tay_tartibi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/maxsulotlar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@id/saqlash"
        android:background="#BEEFD6">
        <EditText
            android:id="@+id/e_t_tartib"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:padding="@dimen/_15sdp"
            android:textColor="#28047A"
            android:hint="Taom tayyorlash tartibi"
            android:textSize="@dimen/_15sdp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/saqlash"
        android:layout_width="160dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_bias=".877"
        android:backgroundTint="#22E286"
        android:layout_marginVertical="@dimen/_15sdp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tay_tartibi"
        app:layout_constraintBottom_toBottomOf="parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#28047A"
        android:text="Saqlash"
        android:textSize="@dimen/_18ssp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>